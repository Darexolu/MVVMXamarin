<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MVVMXamarin.CommandOne">
    <ContentPage.Content>
        <StackLayout BackgroundColor="{Binding BgColor}">
                    <Entry TextColor="White" Text="{Binding EntryNumber}" Keyboard="Numeric"/>
                    <Label Text="Welcome to Xamarin.Forms!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
                    <Button Text="Change Background" Command="{Binding ChangeBG}"/>
                    <Label Text="{Binding SamplePPty}" TextColor="White" FontSize="Large"/>
                    <Label Text="{Binding MyProperty}" TextColor="White" FontSize="Large"/>
                </StackLayout>
            </ContentPage.Content>
        </ContentPage>


       
    